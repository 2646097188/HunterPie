<UserControl x:Class="HunterPie.UI.Controls.Buttons.Keybinding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.UI.Controls.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="200"
             PreviewKeyDown="OnKeyDown"
             Focusable="True">
    <local:Button Background="{StaticResource HUNTERPIE_BACKGROUND_DARK}"
                  Content="{Binding HotKey, RelativeSource={RelativeSource FindAncestor, AncestorType=local:Keybinding}}"
                  OnClick="OnClick">
    </local:Button>
</UserControl>
