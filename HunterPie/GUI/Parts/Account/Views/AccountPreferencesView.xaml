<UserControl x:Class="HunterPie.GUI.Parts.Account.Views.AccountPreferencesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.GUI.Parts.Account.Views"
             xmlns:viewer="clr-namespace:HunterPie.UI.Controls.Viewer;assembly=HunterPie.UI"
             xmlns:components="clr-namespace:HunterPie.GUI.Parts.Account.Views.Components"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="400"
             Background="{StaticResource GRAY_300}"
             Loaded="OnLoad"
             Unloaded="OnUnload">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <viewer:SmoothScrollViewer>
        <StackPanel>
            <ContentPresenter Margin="20">
                <ContentPresenter.Style>
                    <Style TargetType="ContentPresenter">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsFetchingAccount, RelativeSource={RelativeSource AncestorType={x:Type local:AccountPreferencesView}}}"
                                        Value="False">
                                <DataTrigger.Setters>
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <!-- Loaded account details -->
                                            <components:AccountDetailsView />
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger.Setters>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding DataContext.IsFetchingAccount, RelativeSource={RelativeSource AncestorType={x:Type local:AccountPreferencesView}}}"
                                        Value="True">
                                <DataTrigger.Setters>
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <local:AccountPreferencesSkeletonView/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentPresenter.Style>
            </ContentPresenter>

            <!-- Backups -->
            <Border VerticalAlignment="Top"
                    Margin="20,0,20,20"
                    Background="{StaticResource GRAY_100}"
                    Padding="10"
                    BorderBrush="{StaticResource GRAY}"
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="SAVE BACKUPS"
                               Foreground="{StaticResource WHITE_400}"
                               FontWeight="Medium"
                               Grid.ColumnSpan="2"
                               FontSize="15"
                               VerticalAlignment="Top"/>
                    <Separator Grid.ColumnSpan="2"
                               Grid.Row="0"
                               VerticalAlignment="Bottom"
                               Background="{StaticResource GRAY}"/>


                </Grid>
            </Border>
        </StackPanel>
    </viewer:SmoothScrollViewer>
</UserControl>
