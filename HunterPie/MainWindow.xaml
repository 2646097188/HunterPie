<Window x:Class="HunterPie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HunterPie"
        mc:Ignorable="d"
        Title="HunterPie v2" Height="450" Width="800">
    <Grid>
        <ItemsControl Loaded="OnConsoleLoaded">
            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer x:Name="scroll" VirtualizingPanel.IsVirtualizing="True">
                        <VirtualizingStackPanel IsItemsHost="True"/>
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Message, Mode=OneTime}" Foreground="{Binding Color, Mode=OneTime}" FontSize="13" FontFamily="Roboto, Segoe UI, Yu Gothic" TextOptions.TextHintingMode="Fixed" TextOptions.TextFormattingMode="Ideal" TextWrapping="WrapWithOverflow"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
